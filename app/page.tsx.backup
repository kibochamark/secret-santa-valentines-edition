"use client"

import type React from "react"

import { useState } from "react"
import { createClient } from "@/lib/supabase/client"
import { Button } from "@/components/ui/button"
import { Input } from "@/components/ui/input"
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card"
import { hashPin } from "@/lib/pin-utils"

interface JoinedParticipant {
  id: string
  name: string
  eventId: string
}

export default function Home() {
  const [activeTab, setActiveTab] = useState<"create" | "join">("create")
  const [loading, setLoading] = useState(false)
  const [error, setError] = useState<string | null>(null)
  const [success, setSuccess] = useState<string | null>(null)

  // Create Event Form
  const [eventName, setEventName] = useState("")
  const [eventDescription, setEventDescription] = useState("")
  const [createdCode, setCreatedCode] = useState<string | null>(null)

  // Join Event Form
  const [joinCode, setJoinCode] = useState("")
  const [participantName, setParticipantName] = useState("")
  const [participantPin, setParticipantPin] = useState("")
  const [eventParticipants, setEventParticipants] = useState<Array<{ id: string; name: string }>>([])
  const [selectedParticipantId, setSelectedParticipantId] = useState<string | null>(null)
  const [selectedPin, setSelectedPin] = useState("")
  const [joinStep, setJoinStep] = useState<"code" | "select">("code")
  const [currentEventId, setCurrentEventId] = useState<string | null>(null)
  const [joinedParticipant, setJoinedParticipant] = useState<JoinedParticipant | null>(null)

  const generateCode = () => {
    return Math.random().toString(36).substring(2, 8).toUpperCase()
  }

  const handleCreateEvent = async (e: React.FormEvent) => {
    e.preventDefault()
    setLoading(true)
    setError(null)
    setSuccess(null)

    try {
      const supabase = createClient()
      const code = generateCode()

      const { data, error: dbError } = await supabase
        .from("events")
        .insert([
          {
            name: eventName,
            description: eventDescription,
            code: code,
          },
        ])
        .select()

      if (dbError) throw dbError

      setCreatedCode(code)
      setEventName("")
      setEventDescription("")
      setSuccess(`Event created! Share code: ${code}`)
    } catch (err) {
      setError(err instanceof Error ? err.message : "Failed to create event")
    } finally {
      setLoading(false)
    }
  }

  const handleCodeSubmit = async (e: React.FormEvent) => {
    e.preventDefault()
    setLoading(true)
    setError(null)

    try {
      const supabase = createClient()

      // Get event by code
      const { data: eventData, error: eventError } = await supabase
        .from("events")
        .select("id")
        .eq("code", joinCode.toUpperCase())
        .single()

      if (eventError) throw new Error("Event code not found")

      setCurrentEventId(eventData.id)

      // Fetch existing participants
      const { data: participants, error: participantsError } = await supabase
        .from("participants")
        .select("id, name")
        .eq("event_id", eventData.id)

      if (participantsError) throw participantsError

      setEventParticipants(participants || [])
      setJoinStep("select")
    } catch (err) {
      setError(err instanceof Error ? err.message : "Failed to find event")
    } finally {
      setLoading(false)
    }
  }

  const handleParticipantSelect = async (e: React.FormEvent) => {
    e.preventDefault()
    setLoading(true)
    setError(null)
    setSuccess(null)

    try {
      const supabase = createClient()

      if (selectedParticipantId) {
        if (!selectedPin.trim()) {
          setError("Please enter your PIN")
          setLoading(false)
          return
        }

        const { data: participant, error: fetchError } = await supabase
          .from("participants")
          .select("id, name, pin_hash")
          .eq("id", selectedParticipantId)
          .single()

        if (fetchError) throw fetchError

        // Verify PIN matches
        const pinHash = hashPin(selectedPin)
        if (participant.pin_hash !== pinHash) {
          setError("Invalid PIN. Please try again.")
          setLoading(false)
          return
        }

        localStorage.setItem(`event-${currentEventId}-participant`, selectedParticipantId)
        setJoinedParticipant({
          id: selectedParticipantId,
          name: participant.name,
          eventId: currentEventId!,
        })
        setSuccess("Welcome back! PIN verified. Redirecting...")
        setTimeout(() => {
          window.location.href = `/event/${currentEventId}`
        }, 1000)
        return
      }

      if (!participantName.trim()) {
        setError("Please enter your name")
        setLoading(false)
        return
      }

      if (!participantPin.trim() || participantPin.length < 4) {
        setError("Please set a PIN (minimum 4 characters)")
        setLoading(false)
        return
      }

      if (!currentEventId) {
        setError("Event not found")
        setLoading(false)
        return
      }

      const pinHash = hashPin(participantPin)

      const { data, error: participantError } = await supabase
        .from("participants")
        .insert([
          {
            event_id: currentEventId,
            name: participantName,
            pin_hash: pinHash,
          },
        ])
        .select()

      if (participantError) {
        if (participantError.message.includes("unique") || participantError.message.includes("already exists")) {
          setError("This name already exists in the event. Please choose another name.")
        } else {
          throw participantError
        }
        setLoading(false)
        return
      }

      localStorage.setItem(`event-${currentEventId}-participant`, data[0].id)
      setJoinedParticipant({
        id: data[0].id,
        name: data[0].name,
        eventId: currentEventId,
      })
      setSuccess("You've joined! Redirecting...")
      setTimeout(() => {
        window.location.href = `/event/${currentEventId}`
      }, 1000)
    } catch (err) {
      setError(err instanceof Error ? err.message : "Failed to join event")
    } finally {
      setLoading(false)
    }
  }

  if (joinedParticipant && !error) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-background to-secondary flex items-center justify-center p-4">
        <div className="w-full max-w-md">
          <Card>
            <CardHeader>
              <CardTitle>Welcome, {joinedParticipant.name}!</CardTitle>
              <CardDescription>Redirecting to your event...</CardDescription>
            </CardHeader>
            <CardContent>
              <p className="text-sm text-muted-foreground text-center">Setting up your Secret Santa assignment...</p>
            </CardContent>
          </Card>
        </div>
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-background to-secondary flex items-center justify-center p-4">
      <div className="w-full max-w-md">
        {/* Header */}
        <div className="text-center mb-8">
          <h1 className="text-4xl font-bold text-foreground mb-2">Secret Santa</h1>
          <p className="text-muted-foreground">Anonymous gift assignment for friends</p>
        </div>

        {/* Tabs */}
        <div className="flex gap-2 mb-6">
          <button
            onClick={() => {
              setActiveTab("create")
              setJoinStep("code")
              setError(null)
            }}
            className={`flex-1 py-2 px-4 rounded-lg font-medium transition-colors ${
              activeTab === "create"
                ? "bg-primary text-primary-foreground"
                : "bg-secondary text-secondary-foreground hover:bg-muted"
            }`}
          >
            Create Event
          </button>
          <button
            onClick={() => {
              setActiveTab("join")
              setJoinStep("code")
              setError(null)
            }}
            className={`flex-1 py-2 px-4 rounded-lg font-medium transition-colors ${
              activeTab === "join"
                ? "bg-primary text-primary-foreground"
                : "bg-secondary text-secondary-foreground hover:bg-muted"
            }`}
          >
            Join Event
          </button>
        </div>

        {/* Create Event Form */}
        {activeTab === "create" && (
          <Card>
            <CardHeader>
              <CardTitle>Create New Event</CardTitle>
              <CardDescription>Start a new Secret Santa event</CardDescription>
            </CardHeader>
            <CardContent>
              {createdCode ? (
                <div className="bg-primary/10 border border-primary rounded-lg p-4 text-center">
                  <p className="text-sm text-muted-foreground mb-2">Your event code:</p>
                  <p className="text-3xl font-bold text-primary mb-4">{createdCode}</p>
                  <p className="text-xs text-muted-foreground mb-4">
                    Share this code with your friends to let them join
                  </p>
                  <button
                    onClick={() => {
                      setCreatedCode(null)
                      setActiveTab("create")
                    }}
                    className="text-primary hover:underline text-sm font-medium"
                  >
                    Create Another Event
                  </button>
                </div>
              ) : (
                <form onSubmit={handleCreateEvent} className="space-y-4">
                  <div>
                    <label htmlFor="event-name" className="block text-sm font-medium mb-2">
                      Event Name
                    </label>
                    <Input
                      id="event-name"
                      placeholder="e.g., Friends Valentine Exchange"
                      value={eventName}
                      onChange={(e) => setEventName(e.target.value)}
                      required
                    />
                  </div>
                  <div>
                    <label htmlFor="event-desc" className="block text-sm font-medium mb-2">
                      Description (optional)
                    </label>
                    <Input
                      id="event-desc"
                      placeholder="e.g., Max budget: $50"
                      value={eventDescription}
                      onChange={(e) => setEventDescription(e.target.value)}
                    />
                  </div>
                  {error && <p className="text-sm text-destructive">{error}</p>}
                  {success && <p className="text-sm text-green-600">{success}</p>}
                  <Button type="submit" className="w-full" disabled={loading}>
                    {loading ? "Creating..." : "Create Event"}
                  </Button>
                </form>
              )}
            </CardContent>
          </Card>
        )}

        {/* Join Event Form */}
        {activeTab === "join" && (
          <Card>
            <CardHeader>
              <CardTitle>Join Event</CardTitle>
              <CardDescription>
                {joinStep === "code" ? "Enter event code to join" : "Select or create your participant"}
              </CardDescription>
            </CardHeader>
            <CardContent>
              {joinStep === "code" ? (
                <form onSubmit={handleCodeSubmit} className="space-y-4">
                  <div>
                    <label htmlFor="event-code" className="block text-sm font-medium mb-2">
                      Event Code
                    </label>
                    <Input
                      id="event-code"
                      placeholder="e.g., ABC123"
                      value={joinCode}
                      onChange={(e) => setJoinCode(e.target.value.toUpperCase())}
                      required
                    />
                  </div>
                  {error && <p className="text-sm text-destructive">{error}</p>}
                  {success && <p className="text-sm text-green-600">{success}</p>}
                  <Button type="submit" className="w-full" disabled={loading}>
                    {loading ? "Checking..." : "Continue"}
                  </Button>
                </form>
              ) : (
                <form onSubmit={handleParticipantSelect} className="space-y-4">
                  {eventParticipants.length > 0 && (
                    <div>
                      <label className="block text-sm font-medium mb-2">Are you already a participant?</label>
                      <div className="space-y-2 mb-4">
                        {eventParticipants.map((p) => (
                          <button
                            key={p.id}
                            type="button"
                            onClick={() => {
                              setSelectedParticipantId(p.id)
                              setParticipantName("")
                              setParticipantPin("")
                              setSelectedPin("")
                            }}
                            className={`w-full text-left p-3 rounded-lg border-2 transition-colors ${
                              selectedParticipantId === p.id
                                ? "border-primary bg-primary/10"
                                : "border-secondary bg-secondary hover:border-primary/50"
                            }`}
                          >
                            <span className="font-medium">{p.name}</span>
                          </button>
                        ))}
                      </div>
                      <div className="relative my-4">
                        <div className="absolute inset-0 flex items-center">
                          <div className="w-full border-t border-muted"></div>
                        </div>
                        <div className="relative flex justify-center text-xs uppercase">
                          <span className="bg-card px-2 text-muted-foreground">Or</span>
                        </div>
                      </div>
                    </div>
                  )}

                  {selectedParticipantId && (
                    <div>
                      <label htmlFor="selected-pin" className="block text-sm font-medium mb-2">
                        Enter Your PIN to Verify
                      </label>
                      <Input
                        id="selected-pin"
                        type="password"
                        placeholder="Your secret PIN"
                        value={selectedPin}
                        onChange={(e) => setSelectedPin(e.target.value)}
                        required
                      />
                    </div>
                  )}

                  {!selectedParticipantId && (
                    <>
                      <div>
                        <label htmlFor="participant-name" className="block text-sm font-medium mb-2">
                          Create New Participant
                        </label>
                        <Input
                          id="participant-name"
                          placeholder="Enter your name"
                          value={participantName}
                          onChange={(e) => {
                            setParticipantName(e.target.value)
                            setSelectedParticipantId(null)
                            setSelectedPin("")
                          }}
                        />
                      </div>
                      <div>
                        <label htmlFor="participant-pin" className="block text-sm font-medium mb-2">
                          Set Your Secret PIN (min. 4 characters)
                        </label>
                        <Input
                          id="participant-pin"
                          type="password"
                          placeholder="Create a PIN only you know"
                          value={participantPin}
                          onChange={(e) => {
                            setParticipantPin(e.target.value)
                            setSelectedParticipantId(null)
                          }}
                        />
                      </div>
                    </>
                  )}

                  {error && <p className="text-sm text-destructive">{error}</p>}
                  {success && <p className="text-sm text-green-600">{success}</p>}
                  <Button
                    type="submit"
                    className="w-full"
                    disabled={
                      loading ||
                      (selectedParticipantId ? !selectedPin.trim() : !participantName.trim() || !participantPin.trim())
                    }
                  >
                    {loading ? "Joining..." : "Join Event"}
                  </Button>
                  <button
                    type="button"
                    onClick={() => {
                      setJoinStep("code")
                      setSelectedParticipantId(null)
                      setParticipantName("")
                      setParticipantPin("")
                      setSelectedPin("")
                      setEventParticipants([])
                      setError(null)
                    }}
                    className="text-sm text-muted-foreground hover:text-foreground w-full text-center"
                  >
                    Back
                  </button>
                </form>
              )}
            </CardContent>
          </Card>
        )}
      </div>
    </div>
  )
}
